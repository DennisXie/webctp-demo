{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./config/*"
      ]
    },
    "noEmit": true,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*",
    "config/**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
  ]
}
